<h1>Editing Item #<%= @item.id %></h1>

<%= form_tag("/items/#{@item.id}", method: 'put') do %>

  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title, @item.title %>
  </div>

  <div>
    <%= label_tag :address %><br />
    <%= text_field_tag :address, @item.address, size: 50 %>
  </div>


  <div>
    <%= submit_tag "Update Item" %>
  </div>

<% end %>
